TARGET ?= main
CC     ?= gcc

INCLUDE_DIR ?= include
LIB_DIR     ?= lib
SRC_DIR     ?= src

CFLAGS  = -I$(INCLUDE_DIR)
LDFLAGS = -L$(LIB_DIR) -lraylib -lgdi32 -lwinmm

# Source files
SOURCES = $(TARGET).c $(SRC_DIR)/cards.c

.PHONY: all run clean

all: $(TARGET).exe

$(TARGET).exe: $(SOURCES)
	@echo Compilando Echoes of Memory...
	@$(CC) -o $@ $(SOURCES) $(CFLAGS) $(LDFLAGS)
